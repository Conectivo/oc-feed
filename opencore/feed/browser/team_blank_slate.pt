<div class="oc-widget oc-widget-feed oc-column clearAfter"
     tal:define="lowertitle context/title/lower"
     tal:attributes="id string:oc-feed-${lowertitle}">
  <h2 class="oc-feed-title clearAfter">
    <a tal:attributes="href context/link">Team</a>
  </h2>
  <div class="oc-blankSlate"
       tal:condition="view/context/context/isProjectAdmin">
    <img src="/++resource++img/summaryicons/team.gif" />
    <p>There are currently no members for this group.</p>
    <p><a i18n:translate="team-manage_send_email_invite" href="invite">        
        Send an email to invite people to join</a></p>
  </div>
  <div class="oc-widget oc-widget-feed clearAfter"
       tal:condition="not:view/context/context/isProjectAdmin"
       tal:attributes="id string:oc-feed-${lowertitle}">
    <ul class="oc-feed-list clearAfter" tal:condition="context/items">
      <li class="oc-feed-item oc-clearAfter" tal:repeat="entry context/items"> 
        <p tal:define="author entry/author | nothing">
	      <a tal:define="author_home python:view.home(author)" 
		    tal:omit-tag="not:author" 
		    tal:attributes="href author_home"><img tal:attributes="src python:view.portrait(author)" /></a>
          <span class="oc-feed-item-data oc-discreetText">
	        <a tal:define="author_home python:view.home(author)" 
		     tal:omit-tag="not:author"
	       tal:attributes="href author_home"
	       tal:content="author">author</a>
          </span>
        </p>
      </li>
    </ul>
  </div>
</div>
