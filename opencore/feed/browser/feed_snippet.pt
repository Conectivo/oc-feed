<div class="oc-widget oc-widget-feed oc-column">
  <h2 class="oc-feed-title">
    <a tal:attributes="href context/link" tal:content="context/title">Feed Title</a>     
  </h2>
  <div tal:condition="not: context/items">
    <p>
       There are currently no 
       <span tal:replace="python:context.title.lower()">items</span>
    </p>

  </div>

  <ul class="oc-feed-list" tal:condition="context/items">
    <li class="oc-feed-item oc-clearAfter" 
        tal:repeat="entry
        context/items">

        <h3 class="oc-feed-item-title">
          <a tal:attributes="href entry/link"
             tal:content="entry/title" />    
        </h3>
	<span tal:condition="entry/responses/number | nothing"
	      tal:define="number entry/responses/number | nothing">
	<a tal:omit-tag="not:entry/responses/url"
	   tal:attributes="href entry/responses/url"
	   tal:define="replies python: number == 1 and 'reply' or 'replies'"
>
	   <span tal:replace="string: ${number} ${replies}" />
	</a>	   
	</span>

        <div class="oc-feed-item-data oc-discreetText">

	  <span tal:condition="entry/author | nothing">
          <span tal:replace="entry/byline | default">
          by
          </span>

          <a tal:omit-tag="not:entry/author/home"
	     tal:attributes="href entry/author/home"
             tal:content="entry/author/userid" />,
             <span tal:define="date entry/pubDate"
                     tal:replace="python:view.pretty_date(date)"/>
	  </span>
	  <div tal:condition="entry/context | nothing">
	     from
	     <a tal:omit-tag="not:entry/context/link"
		tal:attributes="href entry/context/link"
	        tal:content="entry/context/title">
		This Context
	     </a>
          </div>

        </div>
    </li>
  </ul>
</div>
